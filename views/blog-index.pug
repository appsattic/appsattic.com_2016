extends blog

block blogcontent
  .row
    .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
      for post in blog.thesePosts
        .post-preview
          a(href=post.name)
            h2.post-title= post.meta.title
            h3.post-subtitle= post.meta.subtitle
          p.post-meta
            | Posted by 
            span(style="font-weight:bold;")= post.meta.authorInfo.title
            |  #{post.meta.moment.fromNow()}
        hr

      ul.pager
        if blog.prevUrl
          li.previous
            a(href=blog.nextUrl) ← Newer Posts
        li
          a(href=".") Page #{blog.page || 1} of #{blog.pages.length}
        if blog.nextUrl
          li.next
            a(href=blog.nextUrl) Older Posts →

      hr
